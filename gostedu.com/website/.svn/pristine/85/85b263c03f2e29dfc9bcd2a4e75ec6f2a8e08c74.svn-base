{% spaceless %}
<div id="{{ tab_id }}">
  <form id="advisory_form" action="{{ action }}" method="post" class="gostedu-api" gostedu-api="{api:'ui.ajax_form'}" novalidate {{ form_enctype(form) }}>
    <table class="general_form">
      <caption>{{ title }}</caption>
      <tbody>
        <tr>
          <td><label>姓名:</label></td>
          <td>{{ form_widget(form.name, { 'attr': {'class': 'validate[required]'} }) }}</td>
        </tr>
        <tr>
          <td><label>学校:</label></td>
          <td>{{ form_widget(form.school) }}</td>
        </tr>
        <tr>
          <td><label>专业:</label></td>
          <td>{{ form_widget(form.major) }}</td>
        </tr>
        <tr>
          <td><label>手机:</label></td>
          <td>{{ form_widget(form.mobile) }}</td>
        </tr>
        <tr>
          <td><label>咨询时间:</label></td>
          <td>{{ form_widget(form.advisory_time) }}</td>
        </tr>
        <tr>
          <td><label>备注:</label></td>
          <td>{{ form_widget(form.remark) }}</td>
        </tr>
      </tbody>
    </table>
    {% if error %}
    <div class="error">{{ error }}</div>
    {% endif %}
    <div class="dialog_toolbar">
      <button type="submit" class="button_save">保存</button>
      <button type="button" class="button_cancel gostedu-api" gostedu-api="{api:'ui.close_dialog'{% if not close_dialog %},args:{bind:'click'}{% endif %}}">取消</button>
      {% if is_permitted('advisory', 8) and advisory%}
      <button type="button" class="button_delete gostedu-api" gostedu-api="{api:'cp.call_action',args:{confirm:'确定删除该咨询?',action:'{{ path('gsm_advisory_del', { id: advisory.id }) }}',close_dialog:true}}">删除</button></div>
      {% endif %}
    {{ form_rest(form) }}
  </form>
</div>
{% endspaceless %}